<%=render 'shared/flash'%>
<%=form_for mix.comments.build, remote: true  do |f|%>
  <%=f.hidden_field :mix_id, value: mix.id%>
  <%=f.label "New Comment"%>
  <%=f.text_field :content%>
  <%if current_user%>
    <%=f.submit%>
    
  <%else%>
    <%=button_to "Create Comment", '/login'%>
  <%end%>
<%end%>