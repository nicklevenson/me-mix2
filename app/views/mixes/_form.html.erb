<%if @mix.errors%>
  <%@mix.errors.full_messages.each do |message|%>
      <h4><%=message%></h4>
  <%end%>
<%end%>

<%=form_for [current_user, @mix] do |f|%>
  <%=f.label :title%>
  <%=f.text_field :title%>
  <%=f.label :description%>
  <%=f.text_area :description%>
  <br>
  <%@mix.contents.each do |c|%>
    
    <div id="<%=c.id%>">
    <%=render_piece(c)%>
    <%=link_to "Remove from mix", content_path(c, mix_id: @mix.id, lasturl: request.url), method: :delete%>
    <!-- <input type="hidden" name="mix[content][]" value="<%=c.attributes%>">
    <input type="button" value="Remove from mix" onclick="if(confirm('This item and its notes will be removed from your mix. Are you sure?')) {deleteContent('<%=c.id%>')}"> -->
    </div>
  <%end%>
  <%=f.submit%>
<%end%>


<script type="text/Javascript">
  function deleteContent(id) {
    var content = document.getElementById(id)
    content.remove()
  }

</script>