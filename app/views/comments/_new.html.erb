<%if current_user%>
  <%=form_for mix.comments.build, remote: true  do |f|%>
    <%=f.hidden_field :mix_id, value: mix.id%>
    <%=f.label "New Comment"%>
    <%=f.rich_text_area :content, required: true, id: "trix#{mix.id}"%>
    <%=f.submit%>
  <%end%>
<%else%>
  <%=button_to "Login to add comments", login_path, method: :get%>
<%end%>