<div class="form-signin">
  <div class="card">
    <%=form_for user do |f|%>
      <%=f.text_field :username, class:"form-control", placeholder: "Memix Username" %> <br>
      <%=f.text_field :email, class:"form-control", placeholder: "Your Email" %> <br>
      <%=f.password_field :password, class:"form-control", placeholder: "Password" %> <br>
      <%=f.password_field :password_confirmation, class:"form-control", placeholder: "Password Confirmation" %> <br>
      <%=f.file_field :avatar, class: "col-sm-9"%>
          <%=f.submit "Use", class: "col-sm-2"%>
      <%=f.submit%>
    <%end%>
  </div>
</div>